<!-- Breadcrumb Start -->
<div class="breadcrumb-wrap">
	<div class="container">
		<ul class="breadcrumb">
			<li class="breadcrumb-item"><a href="/">Home</a></li>
			<li class="breadcrumb-item"><a href="/products">Products</a></li>
			<li class="breadcrumb-item active">Wishlist</li>
		</ul>
	</div>
</div>
<!-- Breadcrumb End -->

<!-- Wishlist Start -->
<div class="cart-page">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<div class="table-responsive">
					{{#if products.length}}
						<table class="table table-bordered">
							<thead class="thead-dark">
								<tr>
									<th>Image</th>
									<th>Name</th>
									<th>Price</th>
									<th>Add to Cart</th>
									<th>Remove</th>
								</tr>
							</thead>
							<tbody class="align-middle">

								{{#each products}}
									{{#with Product}}
										<tr>
											<td><a href="#"><img
														src="{{imagePath}}"
														alt="{{name}}"
													/></a></td>
											<td><a href="/products/{{id}}">{{name}}</a></td>
											<td>${{price}}</td>
											<td><button onclick="addCart({{id}},1)">Add to Cart</button></td>
											<td><button onclick="removeFromWishlist({{id}})"><i class="fa fa-trash"></i></button></td>
										</tr>
									{{/with}}
								{{/each}}
							</tbody>
						</table>
					{{else}}
						<div class="text-center border py-3">
							<h3>Your wishlist is empty!</h3>
						</div>
					{{/if}}

				</div>
			</div>
		</div>
	</div>
</div>
<!-- Wishlist End -->